{
  "compilerOptions": {
    "target": "ES2020",         // 编译目标版本
    "module": "ESNext",         // 模块系统
    "jsx": "react-jsx",         // React JSX 支持
    "strict": true,             // 启用严格的类型检查
    "skipLibCheck": true,       // 跳过对声明文件的检查
    "esModuleInterop": true,    // 允许默认导入
    "moduleResolution": "bundler", // 模块解析策略
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": ["src"]           // 只包含 src 目录
}